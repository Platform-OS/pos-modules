{%- liquid
  if reference_id == blank
    log "reference_id is null", type: "QUERY ERROR"
    return null
  endif

  graphql g  = 'modules/payments_stripe/connected_accounts/search', reference_id: reference_id, limit: 1, stripe_account_name: stripe_account_name
  if g.records == blank
    log reference_id, type: "QUERY ERROR - PARAMS"
    log g, type: "QUERY ERROR"
  endif

  return g.records.results[0]
-%}
