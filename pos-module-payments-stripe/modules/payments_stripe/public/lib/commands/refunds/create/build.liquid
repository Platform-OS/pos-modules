{%- parse_json object -%}
  {
    "amount": {{ object.amount | round | json }},
    "transaction_id": {{ transaction.id | json }},
    "refund_id": {{ object.refund_id | json }},
    "charge": {{ object.charge | json }},
    "payment_intent": {{ object.payment_intent | json }},
    "refund_application_fee": {{ object.refund_application_fee | json }},
    "reverse_transfer": {{ object.reverse_transfer | json }},
    "reason": {{ object.reason | json }},
    "stripe_account_name": {{ object.stripe_account_name | json }},
    "status": {{ object.status | default: 'new' | json }}
  }
{%- endparse_json -%}
{% liquid
  return object
%}
